{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@lifi/components": ["src/components/index", "src/components/*"],
      "@lifi/components/*": ["src/components/*"],
      "@lifi/style": ["src/style/index", "src/style/*"],
      "@lifi/style/*": ["src/style/*"],
      "@lifi/hooks": ["src/hooks/index", "src/hooks/*"],
      "@lifi/hooks/*": ["src/hooks/*"],
      "@lifi/types": ["src/types/index", "src/types/*"],
      "@lifi/types/*": ["src/types/*"],
      "@lifi/utils": ["src/utils/index", "src/utils/*"],
      "@lifi/utils/*": ["src/utils/*"],
      "@lifi/constants": ["src/constants/index", "src/constants/*"],
      "@lifi/constants/*": ["src/constants/*"]
    }
  }
}
